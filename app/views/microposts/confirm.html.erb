<h1>Are you OK?</h1>

<%=form_with(model: @micropost,url: microposts_path,local: true)do |f|%>
  <%=f.hidden_field :content %>

  <p class='comment'>Content >> <%=@micropost.content%></p>
  <%=f.submit "OK!"%>
<% end %>

<%=form_with(model:@micropost,url:new_micropost_path,local:true,method:'get')do |f|%>
  <%=f.hidden_field :content%>
  <%=f.submit 'Back',name:'back'%>
<% end %>
