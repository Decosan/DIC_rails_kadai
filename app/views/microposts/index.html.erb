<h1>My Posts</h1>
<table>
  <tr>
    <th>No.</th>
    <th>Content</th>
  </tr>
  <tr>
    <%@microposts.each do |micropost|%>
      <td><%=micropost.id%>.</td>
      <td class="comment"><%=micropost.content%></td>
      <td><%=link_to 'Edit',edit_micropost_path(micropost), class:'btn'%></td>
      <td>
        <%=link_to 'Delete',micropost_path(micropost),method: :delete,data:{confirm:'Are you sure?'} ,class:'btn',id:'red'%>
      </td>
  </tr>
    <% end %>
</table>

<%=link_to 'Create New Post',new_micropost_path, class: "btn" %>
